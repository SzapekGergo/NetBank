@model NetBank.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1 class="text-center">@Html.DisplayFor(model => model.ResultMessage)</h1>
<div class="row sign-in-form">
    @Html.Partial("_Login")
</div>

@Html.AntiForgeryToken()
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Bankszámla Igénylés</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <p>
                            <span>@Html.LabelFor(model => model.Name):</span>
                            @Html.TextBoxFor(model => model.Name, new {@class= "form-control" })
                        </p>
                    </div>

                    <div>
                        <p><span>@Html.LabelFor(model => model.Email): </span>@Html.TextBoxFor(model => model.To, new { @class = "form-control" })</p>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Mégse">
                    <input type="submit" class="btn btn-primary" value="Email Küldése">
                </div>
            </div>
        </div>
    </div>
}

